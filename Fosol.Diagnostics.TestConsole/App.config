<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="fosol.diagnostics" type="Fosol.Diagnostics.Configuration.DiagnosticsSection, Fosol.Diagnostics" requirePermission="false"/>
  </configSections>
  
  <fosol.diagnostics xmlns="http://diagnostics.fosol.ca/Fosol.Diagnostics.xsd">
    <!--<filters>
      <add name="debug" type="Fosol.Diagnostics.Filters.LevelFilter, Fosol.Diagnostics">
        <args>
          <add name="Level" value="Debug"/>
        </args>
      </add>
    </filters>-->
    
    <sharedListeners>
      <add name="console" type="Fosol.Diagnostics.Listeners.ColoredConsoleListener, Fosol.Diagnostics">
        <initialize>
          <add name="UseErrorStream" value="false"/>
        </initialize>
        <settings>
          <add name="BackgroundColor" value="Black"/>
          <add name="Format" value="{type} {sourceType}: [{id}] {source}: {datetime}: {message}{newline}"/>
        </settings>
        <!--<filter name="debug" />-->
      </add>
      <add name="file" type="Fosol.Diagnostics.Listeners.TextFileListener, Fosol.Diagnostics">
        <settings>
          <add name="FileName" value="{datetime?f=ddd}.TestConsole.log"/>
          <add name="StartFormat" value="==========================================={newline}{type}: [{id}] {source}: {datetime}: {message}{newline}"/>
          <add name="StopFormat" value="{type}: [{id}] {source}: {datetime}: {message}{newline}==========================================={newline}"/>
          <add name="BufferSize" value="1024"/>
          <add name="ArchiveAboveSize" value="2048"/>
          <add name="ArchiveFileName" value="TestConsole.log"/>
          <add name="AutoFlush" value="BufferFull"/>
        </settings>
      </add>
      <add name="db" type="Fosol.Diagnostics.Listeners.DatabaseListener, Fosol.Diagnostics">
        <settings>
          <add name="ProviderName" value="System.Data.SqlClient"/>
          <add name="ConnectionString" value="test"/>
          <add name="CommandText" value="INSERT INTO dbo.Test VALUES ({@Id?value={type}})"/>
        </settings>
      </add>
    </sharedListeners>

    <sources>
      <add name="Fosol.Diagnostics.TextConsole">
        <listeners>
          <add name="console"/>
        </listeners>
      </add>
    </sources>
    
    <trace autoFlush="false" autoRefresh="true">
      <listeners>
        <!--<clear/>-->
        <add name="console"/>
        <add name="file"/>
        <!--<add name="db"/>-->
      </listeners>
    </trace>
  </fosol.diagnostics>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>
</configuration>
